<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.RelativeLayoutExercise1">
    <ContentPage.Content>
        <RelativeLayout>
            <BoxView Color="#f7f7f7" x:Name="banner"
                RelativeLayout.HeightConstraint="{ConstraintExpression 
                    Type=RelativeToParent,
                    Property=Height,
                    Factor=0.3}"
            
                RelativeLayout.WidthConstraint="{ConstraintExpression 
                    Type=RelativeToParent,
                    Property=Width,
                    Factor=1}" />

            <StackLayout VerticalOptions="Center" HorizontalOptions="Center"
                RelativeLayout.HeightConstraint="{ConstraintExpression 
                    Type=RelativeToView,
                    ElementName=banner,
                    Property=Height,
                    Factor=1}"
            
                RelativeLayout.WidthConstraint="{ConstraintExpression 
                    Type=RelativeToView,
                    ElementName=banner,
                    Property=Width,
                    Factor=1}">
            
            <Label Text="$11.95" 
                    TextColor="#33353a"
                    FontSize="60"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>
            <Button BackgroundColor="#1695A3"
                    TextColor="White"
                    CornerRadius="15"
                    FontSize="15"
                    FontAttributes="Bold"
                    Text="Add $7.99 Credit"
                    HorizontalOptions="Center"/>
            </StackLayout>

            <StackLayout Padding="40, 0" Spacing="20" VerticalOptions="Center"
                RelativeLayout.YConstraint="{ConstraintExpression 
                    Type=RelativeToView,
                    ElementName=banner,
                    Property=Height,
                    Factor=1,
                    Constant=30}"
                         
                RelativeLayout.WidthConstraint="{ConstraintExpression
                    Type=RelativeToParent,
                    Property=Width,
                    Factor=1}">
                
                <Label Text="Why pay for credit?" 
                    TextColor="#33353a"
                    FontSize="15"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"/>
                <Label FontSize="13"
                    TextColor="#33353a"
                    HorizontalTextAlignment="Center">
                    Because you can reach people who aren't on
SkyApp by calling mobile and landline
numbers, or spending SMS, at low-cost rates.
                </Label>
            </StackLayout>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>